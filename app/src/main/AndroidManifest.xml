            android:name=".UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GetBookSellerLocationActivity" />

        <service
            android:name=".GetAddressIntentService"
            android:exported="false" />

        <activity android:name=".GetBookPictureActivity" />
        <activity
            android:name=".GetBookPriceActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".GetBookDegreeActivity" />
        <activity android:name=".GetBookBoardActivity" />
        <activity
            android:name=".GetBookDescriptionActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".GetBookClassActivity" />
        <activity
            android:name=".GetBookNameActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".GetBookMaterialTypeActivity" />
        <activity
