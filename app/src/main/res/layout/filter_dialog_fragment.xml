<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filters_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/filterQuestionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="Find exactly what you're looking for."
        android:textColor="@color/colorTextBlack"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/gradeAndBoardFilterLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterQuestionTV">

        <LinearLayout
            android:id="@+id/gradeFilterLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gradeFilterLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Grade" />

            <CheckBox
                android:id="@+id/filterGrade5orBelow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 and below" />

            <CheckBox
                android:id="@+id/filterGrade6to8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 to 8" />

            <CheckBox
                android:id="@+id/filterGrade9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9" />

            <CheckBox
                android:id="@+id/filterGrade10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10" />

            <CheckBox
                android:id="@+id/filterGrade11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11" />

            <CheckBox
                android:id="@+id/filterGrade12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boardFilterLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/gradeFilterLL"
            app:layout_constraintTop_toBottomOf="@+id/filterQuestionTV">

            <TextView
                android:id="@+id/boardFilterLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Board" />

            <CheckBox
                android:id="@+id/filterBoardCbse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cbse" />

            <CheckBox
                android:id="@+id/filterBoardIcse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/icse" />

            <CheckBox
                android:id="@+id/filterBoardIb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ib" />

            <CheckBox
                android:id="@+id/filterBoardIgcse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/igcse" />

            <CheckBox
                android:id="@+id/filterBoardState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/state_board" />

            <CheckBox
                android:id="@+id/filterBoardOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other" />

            <CheckBox
                android:id="@+id/filterBoardCompetitiveExams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Competitive exams" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/freeFilterLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gradeAndBoardFilterLL">

            <TextView
                android:id="@+id/priceFilterLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Price" />

            <CheckBox
                android:id="@+id/freeOnlyCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:text="@string/free_only" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/gradeAndBoardFilterLL">

            <TextView
                android:id="@+id/typeFilterLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/type" />

            <CheckBox
                android:id="@+id/filterTextbook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textbook" />

            <CheckBox
                android:id="@+id/filterNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes" />

        </LinearLayout>

    </LinearLayout>
    <!-- Cancel and apply buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_cancel"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/greySecondary"
            android:text="cancel"
            />


        <Button
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply"
            />

    </LinearLayout>



</LinearLayout>

