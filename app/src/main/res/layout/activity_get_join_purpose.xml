<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetJoinPurposeActivity">


    <RadioGroup
        android:id="@+id/reasonsButtonList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp">

        <RadioButton
            android:id="@+id/toSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_sell"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/toBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_buy"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/reasonQuestionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/im_here_to"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:textSize="22sp"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintBottom_toTopOf="@+id/reasonsButtonList"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_navigate_next_24px"/>


</androidx.constraintlayout.widget.ConstraintLayout>